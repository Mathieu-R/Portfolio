{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Portfolio - Ephec",
  "main": "server/server.js",
  "scripts": {
    "test": "lightouse",
    "bump": "npm version patch",
    "build": "yarn build-css && yarn build-js",
    "create-css-folder": "mkdirp static/styles",
    "build-css": "yarn create-css-folder && node-sass sass/ -o static/styles/ && node ./build/clean-css",
    "build-js": "rollup -c rollup.config.production.js",
    "watch": "parallelshell \"yarn watch-js\" \"yarn watch-css\"",
    "watch-css": "yarn create-css-folder && node-sass -w sass/ -o static/styles/",
    "watch-js": "rollup -wc rollup.config.js",
    "optimize-images": "imageoptim -d static/images",
    "release": "yarn optimize-images && yarn build && yarn bump",
    "start": "nodemon --inspect server/server.js"
  },
  "repository": "git@github.com:Mathieu-R/Portfolio.git",
  "author": "Mathieu-R <mathieu0709@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "adaro": "^1.0.4",
    "dustmotes-iterate": "^0.0.2",
    "express": "^4.15.2",
    "mz": "^2.6.0",
    "nodemon": "^1.11.0"
  },
  "devDependencies": {
    "clean-css": "^4.1.3",
    "compression": "^1.6.2",
    "imageoptim-cli": "^1.14.9",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "parallelshell": "^2.0.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-cleanup": "^1.0.0",
    "rollup-plugin-filesize": "^1.3.2",
    "rollup-plugin-hash": "^1.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-progress": "^0.2.1",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-watch": "^3.2.2",
    "serve-static": "^1.12.3"
  }
}
